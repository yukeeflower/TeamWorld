<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/tab_title"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="30dp"
            android:textColor="@color/text_gray"
            android:text= "我的收藏" />
        <ImageView
            android:id="@+id/xuanshang_home_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tab_menu_home"
            />
        <ImageView
            android:id="@+id/xuanshang_message_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/home_icon_message"
            android:layout_marginRight="10dp"
            android:layout_margin="5dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/text_gray"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/myhome_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#40484F">
        <ImageView
            android:id="@+id/myhome_userimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/my_user_logo"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/myhome_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pxh"
            android:textSize="30dp"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:layout_toRightOf="@id/myhome_userimage"
            />
        <TextView
            android:id="@+id/myhome_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="简介:"
            android:textSize="20dp"
            android:layout_below="@+id/myhome_username"
            android:layout_toRightOf="@+id/myhome_userimage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="一名学习中的程序媛"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/myhome_show"
            android:layout_below="@+id/myhome_username"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/myhome_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#02AC50"
            android:text="我的好友"
            android:textColor="#fff"
            android:textSize="20dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#76DF6B"
            android:text="好友请求"
            android:textColor="#fff"
            android:textSize="20dp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"
        android:layout_marginTop="8dp"
        />
    <LinearLayout
        android:id="@+id/myhome_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

            <TextView
                android:id="@+id/myhome_body_xuanshang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="悬赏动态消息"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_margin="10dp"

                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/my_icon_go"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="10dp"
                />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"
        />
    <LinearLayout
        android:id="@+id/myhome_body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/myhome_body_PK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PK动态消息"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_margin="10dp"

            />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/my_icon_go"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:id="@+id/myhome_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/myhome_foot_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表的文章"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_margin="10dp"

            />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/my_icon_go"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"
        />
    <LinearLayout
        android:id="@+id/myhome_foot2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/myhome_foot_say"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点评"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_margin="10dp"

            />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/my_icon_go"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"/>
    <LinearLayout
        android:id="@+id/myhome_foot3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/myhome_foot_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的赞"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_margin="10dp"

            />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/my_icon_go"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"
        />









</LinearLayout>