<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/home_userimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/home_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="24dp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/home_userimage"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/home_schoolname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="学校名称"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_below="@+id/home_username"
        android:layout_alignLeft="@+id/home_username"
        />
    <ImageView
        android:id="@+id/home_usersex"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/home_username"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/home_project_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_userimage"
        android:text="作品简介："
        android:textColor="#000"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/home_project_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/home_project_title"
        android:layout_below="@+id/home_userimage"
        android:text="作品内容"
        android:textColor="#000"
        android:textSize="18dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_project_content"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:background="@color/text_blue"
            android:layout_marginRight="1dp">
            <ImageView
                android:id="@+id/shoucang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/home_cell_favorite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shoucang"
                android:layout_centerVertical="true"
                android:text="收藏"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="#fff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:background="@color/text_blue"
            android:layout_marginRight="1dp"
            >
            <ImageView
                android:id="@+id/fenxiag"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/home_cell_fenxiang"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/fenxiag"
                android:layout_centerVertical="true"
                android:text="分享"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="#fff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@color/text_blue">
            <ImageView
                android:id="@+id/pinglun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/home_cell_comments"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pinglun"
                android:layout_centerVertical="true"
                android:text="评论"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="#fff"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
