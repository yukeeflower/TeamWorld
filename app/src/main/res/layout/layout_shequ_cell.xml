<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/shequ_userimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/shequ_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="24dp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/shequ_userimage"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/shequ_schoolname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学校名称"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_below="@+id/shequ_username"
        android:layout_alignLeft="@+id/shequ_username"
        />

    <TextView
        android:id="@+id/shequ_project_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shequ_userimage"
        android:text="内容"
        android:textColor="#000"
        android:textSize="18dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shequ_project_content"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:background="@color/text_blue"
            android:layout_marginRight="1dp">
            <ImageView
                android:id="@+id/shoucang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/home_cell_favorite"/>
            <TextView
                android:id="@+id/shoucang_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shoucang"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="000"
                android:textSize="16sp"
                android:textColor="#fff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shoucang_num"
                android:layout_centerVertical="true"
                android:text="次收藏"
                android:textSize="16sp"
                android:textColor="#fff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:background="@color/text_blue"
            android:layout_marginRight="1dp"
            >
            <ImageView
                android:id="@+id/zan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/shequ_icon_zan"/>
            <TextView
                android:id="@+id/zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/zan"
                android:layout_marginLeft="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/zan_num"
                android:layout_centerVertical="true"
                android:text="个赞"
                android:textSize="16sp"
                android:textColor="#fff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@color/text_blue">
            <ImageView
                android:id="@+id/pinglun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/home_cell_comments"/>
            <TextView
                android:id="@+id/pinglun_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="16sp"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/pinglun"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pinglun_num"
                android:layout_centerVertical="true"
                android:text="个评论"
                android:textSize="16sp"
                android:textColor="#fff"/>
        </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>
