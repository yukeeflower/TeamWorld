<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.piaoxuehua.teamworldapplication.JoinActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/join_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="真实姓名:"
        android:textSize="17dp"
        android:textColor="#000"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/join_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入真实姓名"
        android:layout_marginTop="20dp"
        
        />

    </LinearLayout>
    <ImageView
        android:layout_below="@+id/join_name"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_blue"/>
    <LinearLayout
        android:id="@+id/join_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_name">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号:"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_below="@+id/join_phone"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_blue"/>
    <LinearLayout
        android:id="@+id/join_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_phone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱:"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="20dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入邮箱"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>
    <ImageView
        android:layout_below="@+id/join_mail"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_blue"/>
    <LinearLayout
        android:id="@+id/join_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_mail">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在学校:"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="20dp"
            />
        <EditText
            android:id="@+id/join_schoolname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入所在学校"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_below="@+id/join_school"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_blue"/>
    <LinearLayout
        android:id="@+id/join_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_school">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所担任职位:"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="20dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入职位"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_below="@+id/join_position"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_blue"/>
    <LinearLayout
        android:id="@+id/join_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_position">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目类型:"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="20dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择项目类型"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>
    <ImageView
        android:layout_below="@+id/join_style"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_blue"/>
    <TextView
        android:id="@+id/join_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/join_style"
        android:text="项目简介："
        android:textSize="17dp"
        android:textColor="#000"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/join_neirong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入项目相关简介，50字以内..."
        android:paddingTop="8dp"
        android:background="@null"
        android:layout_below="@+id/join_show"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_blue"
        android:layout_below="@+id/join_neirong"/>
    <LinearLayout
        android:id="@+id/join_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_neirong">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位和成员："
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/join_member1"
        android:layout_below="@+id/join_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位:"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="20dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="xx职位"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数:"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="20dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="xx人"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/join_member2"
        android:layout_below="@+id/join_member1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位:"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="20dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="xx职位"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数:"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_margin="20dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="xx人"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_blue"
        android:layout_below="@+id/join_member2"/>
    <Button
        android:id="@+id/join_button_tijiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:background="@drawable/border_join_ok"
        android:layout_below="@+id/join_member2"
        android:layout_margin="50dp"
        android:layout_alignParentRight="true"
        />






</RelativeLayout>

</ScrollView>
